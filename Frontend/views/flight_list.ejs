<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png"href="/assets/images/logo.png">
    <title>Flight View</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="/styles/flight_list.css">
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <div class="flight-list-container">
        <a href="/admin" class="back_link"> &larr; Back to Admnin Select</a>
        <% if(staff && staff.role == "Admin"){ %>
                <h1 class="section-title">All Flights</h1>
            <% } else { %> 
                <h1 class="section-title">Assigned Flights</h1>
            <% } %>
            <div id="search_div">
                <img src="/assets/images/search_icon.png" alt="Search Icon" id="search_icon" onclick="document.getElementById('flight_search_input').focus()">
                <input type="text" placeholder="Flight Number" id="flight_search_input" class="input">
            </div> 
        <% if (flights && flights.length > 0) { %>
            <% flights.forEach(function(flight) { %>
        <form action="/staff/flight-list" method="POST" class="flight_row">
            <input type="hidden" name="flight_number" value="<%= flight.flight_number %>">
            <button type="submit">
                <div class="flight-card" >
                    <div class="group-airline">
                        <span class="highlight large flight_number_value"><%= flight.flight_number%> </span>
                    </div>
                    <div class="center-section">
                        <div class="info-col">
                            <span class="highlight time"><%= flight.dept_time.toString().slice(0, 5) %> - <%= flight.arrival_time.toString().slice(0, 5) %></span>
                            <span class="sub-text date"><%= flight.date.toISOString().split('T')[0]%> </span>
                        </div>
                        <div class="info-col">
                            <span class="highlight duration"><%= flight.status %></span>
                            <span class="sub-text route"><%= flight.dept_airport %> - <%= flight.arrival_airport %></span>
                        </div>
                    </div>
                    <div class="group-status">
                        <span class="status-text">Direct</span>
                    </div>
                </div>
            </button>
        </form>
        <p id="no_results_msg" class="search_error">Flight Not Found</p>
        <% }) %>
        <% } else { %>
            <p>No Flights Assigned!</p>
        <% } %>
    </div>
    <script>
        document.getElementById('flight_search_input').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('.flight_row');
            let hasResults = false;

            rows.forEach(row => {
                const flightNumber = row.querySelector('.flight_number_value').textContent.toLowerCase();
                if (flightNumber.includes(searchValue)) {
                    row.style.display = 'flex';
                    hasResults = true;
                } else {
                    row.style.display = 'none';
                }
            });

            const noResultsMsg = document.getElementById('no_results_msg');
            if (noResultsMsg) {
                noResultsMsg.style.display = hasResults ? 'none' : 'block';
            }
        });
    </script>
</body>
</html>