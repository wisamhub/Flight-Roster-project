<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabular View Responsive</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="/styles/tabular_view.css" rel="stylesheet">
</head>
<body>
    <%- include("partials/navbar") %>
    <div class="tabular-view">
        <div class="nav-tabs">
            <div class="tab">Flight View</div>
            <div class="tab active">Tabular View</div>
            <div class="tab">Extended View</div>
        </div>

        <section class="section">
            <div class="section-header">
                <h2 class="section-title">Flight Information</h2>
            </div>
            
            <div class="data-table">
                <div class="data-column">
                    <div class="column-header">Flight Number</div>
                    <div class="column-body"><!-- Data goes here --></div>
                </div>
                <div class="data-column">
                    <div class="column-header">Date</div>
                    <div class="column-body"><!-- Data goes here --></div>
                </div>
                <div class="data-column">
                    <div class="column-header">Departure Airport</div>
                    <div class="column-body"><!-- Data goes here --></div>
                </div>
                 <div class="data-column">
                    <div class="column-header">Gate</div>
                    <div class="column-body"><!-- Data goes here --></div>
                </div>
            </div>
        </section>

        <div class="split-section-container">
            
            <section class="section">
                <div class="section-header">
                    <h2 class="section-title">Passenger</h2>
                </div>
                <div class="data-table">
                    <div class="data-column">
                        <div class="column-header">Name</div>
                        <div class="column-body"></div> <!-- passenger names here -->
                    </div>
                    <div class="data-column">
                        <div class="column-header">Seat</div>
                        <div class="column-body"></div> <!-- passenger seats here -->
                    </div>
                    <div class="data-column">
                        <div class="column-header">Class</div>
                        <div class="column-body"></div> <!-- passenger class here -->
                    </div>
                    
                </div>
            </section>

            <section class="section">
                <div class="section-header">
                    <h2 class="section-title">Staff</h2>
                </div>
                <div class="data-table">
                    <div class="data-column">
                        <div class="column-header">Name</div>
                        <div class="column-body"></div> <!-- staff names here -->
                    </div>
                    <div class="data-column">
                        <div class="column-header">Role</div>
                        <div class="column-body"></div> <!-- staff roles here -->
                    </div>
                    <div class="data-column">
                        <div class="column-header">Rank</div>
                        <div class="column-body"></div> <!-- staff ranks here -->
                    </div>
                </div>
            </section>

        </div>
    </div>
</body>
</html>
