<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/png"href="/assets/images/logo.png">
  <title>Anuti Airlines · Admin Actions</title>
  <style>
    :root {
      --navy: #0A2342;
      --orange: #FF6B00;
      --white: #FFFFFF;
      --black: #000000;
      --gray: #E5E7EB;
      --gray-text: #6B7280;
    }

    * { box-sizing: border-box; }

    body {
      margin: 0;
      margin-top:15%;
      font-family: Inter, system-ui, sans-serif;
      background-color: #02124e;
      color: var(--black);
    }

    /* NavBar alanı siz ekleyeceksiniz */
    .navbar-space {
      height: 72px;
      background: transparent;
    }

    .content {
      max-width: 800px;
      margin: 40px auto;
      background-color:#011663;
      border-radius: 16px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      padding: 48px 44px;
      border: 5px solid rgb(0, 0, 0);
    }

    h1 {
      margin: 0;
      color: #FF8A02;
      font-size: 24px;
      letter-spacing: 0.2px;
      text-align: center;
    }

    .subtitle {
      margin: 10px 0 0;
      color: #FFFFFF;
      font-size: 14px;
      line-height: 1.4;
      text-align: center;
    }

    .actions {
      display: flex;
      justify-content: center;
      gap: 18px;
      margin-top: 34px;
      flex-wrap: wrap;
    }

    .btn {
      background: var(--orange);
      border: none;
      color: var(--white);
      padding: 16px 26px;
      border-radius: 12px;
      font-weight: 800;
      cursor: pointer;
      font-size: 15px;
      letter-spacing: 0.2px;
      min-width: 260px;
      box-shadow: 0 10px 22px rgba(255,107,0,0.18);
      transition: 0.15s;
    }

    .btn:hover { filter: brightness(0.92); transform: translateY(-1px); }

    .btn.secondary {
      background: transparent;
      color: #FFFFFF;
      border: 2px solid var(--gray);
      box-shadow: none;
    }

    .btn.secondary:hover {
      border-color: rgb(51, 255, 0);
      background: rgba(10,35,66,0.03);
      filter: none;
      transform: translateY(-1px);
    }

    @media (max-width: 520px) {
      .content { margin: 24px; padding: 28px 20px; }
      .btn { min-width: 100%; }
    }
  </style>
</head>
<body>
  <%- include("partials/navbar.ejs") %>
  <main class="content">
    <h1>Admin Actions</h1>
    <p class="subtitle">Choose an action to continue.</p>

    <div class="actions">
      <button class="btn secondary" type="button" id="btn-create-flight" onclick="window.location.href='/admin/create-flight'">Create a Flight</button>
      <button class="btn secondary" type="button" id="btn-assign-staff" onclick="window.location.href='/admin/flight-list'">Modify Flight</button>
    </div>
  </main>
</body>
</html>
